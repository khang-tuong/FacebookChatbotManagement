
@model FacebookChatbotManagement.Models.Entities.Entity

<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Tạo entity</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Tên</label>
                    <input class="form-control" value="" name="txtName" id="txtName" /><br />
                    <label>Từ vựng (phân cách bằng dấu gạch đứng | )</label>
                    <input class="form-control" value="" name="txtWords" id="txtWords" />
                    <button class="btn btn-primary" onclick="save()">Lưu</button>
                    <button class="btn btn-danger" data-dismiss="modal">Hủy</button>
                </div>

            </div>

        </div>
    </div>
</div>

<script>
    var modal;

    $(document).ready(() => {
        this.modal = $('#myModal').modal();
        this.modal.show();
    })

    function save() {
        let data = {
            name: $('#txtName').val(),
            words: $('#txtWords').val(),
        }

        $.ajax({
            url: '@Url.Action("Create", "Entity")',
            type: 'POST',
            data: data,
            success: (res) => {
                location.reload();
            }
        })
    }
</script>
